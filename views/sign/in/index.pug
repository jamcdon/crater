extends ../../template.pug 
mixin content
    div#content.p-3
        h1.h2 Sign in to crater
        form(action="javascript:authenticate()").userInfo
            div.mb-3
                label(for="email").form-label Email address
                input(type="email")#email.form-control
            div.mb-3
                span.d-flex.justify-content-between
                    span
                        label(for="password") Password
                    span
                        a(href="/sign/in/forgot").text-primary Forgot password?
                input(type="password")#password.form-control
            div.d-flex.flex-wrap.align-items-center.justify-content-left.justify-content.lg-start
                button(type="submit").btn.btn-warning Sign in
                button(type="").btn.btn-secondary.ms-3
                    span.d-flex 
                        img(src="/img/github.svg" width="24" height="24")
                        p.ps-2.py-0.my-0 Sign in with GitHub
        p.pt-1.mb-0#error.text-danger &nbsp;
        p.py-1 Don't have an account?
            a(href="/sign/up").text-primary.ps-1 Sign up
    script(src="/script/sign/in/index.js")