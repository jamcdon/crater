extends ../template.pug
mixin content
    div#content.p-3
        h1.h2 Sign up for crater
        form(action="javascript:createOrError()")#userInfo
            div.mb-3
                label(for="username").form-label Username
                input(type="text")#username.form-control
                p#usernameValidation.text-danger &nbsp;
            div.mb-3
                label(for="email").form-label Email address
                input(type="email")#email.form-control
                p#emailValidation.text-danger &nbsp;
            div.mb-3
                label(for="password") Password
                input(type="password")#password.form-control
                span.d-flex.justify-content-between
                    p#passwordValidation.text-danger &nbsp;
                    span.d-flex.align-items-center.form-switch
                        input(type="checkbox" onclick="togglePassword()")#showPass.form-check-input
                        label(for="showPass") &nbsp; Show password
            div.d-flex.flex-wrap.align-items-center.justify-content-left.justify-content.lg-start
                button(type="submit").btn.btn-warning Sign up
                button(type="").btn.btn-secondary.ms-3
                    span.d-flex 
                        img(src="/img/github.svg" width="24" height="24")
                        p.ps-2.py-0.my-0 Sign up with GitHub
    script(src="/script/sign/up.js")