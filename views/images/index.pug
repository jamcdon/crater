extends ../template.pug
mixin content 
    div#content
    include ../sign/modal.pug
    div.d-flex.flex-wrap.my-5.justify-content-between
        h1.h2 Images
        div.text-end
            a(href='/images/new').btn.btn-info.mx-3 New
            if userIDToken
                a(href='/images/your-images').btn.btn-warning Your Images
            else
                button(data-bs-toggle="modal" data-bs-target="#overlay").btn.btn-warning Your Images
    div.row
        each image in images
            div.col-sm-3
                a(href=`/images/view/${image.name}`).btn.card.my-2
                    img(width="48" src=minioPublic + "/image/" + image.name + ".png")
                    div
                        h5.card-title= image.name
                        p.card-text #{image.scriptsUsing} scripts


    script(src="/script/image/index.js")