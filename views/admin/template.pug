doctype html
html(lang="en")
    head
        title crater admin - #{page}
        meta(charset="utf-8")
        link(rel="icon" href="/img/favicon-admin.svg")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css")
    body
        header.p-3.bg-danger.text-white
            div.container 
                div.d-flex.flex-wrap.align-items-center.justify-content-center.justify-content.lg-start
                    a(href='/admin').d-flex.aligh-items-center.mb-2.mb-lg-0.text-white.text-decoration-none
                        h1.h2.font-monospace.mt-3 crater.admin
                        img(width=30,height=48 aria-label="crater.sh" src="/img/crane-wt.svg").bi.me-2
                    ul.nav.col-12.col-lg-auto.me-lg-auto.mb-2.justify-content-center.mb-md-0
                        li
                            if page == "Home"
                                a(href="/admin").nav-link.px-2.text-white.btn Home
                            else
                                a(href="/admin").nav-link.px-2.text-black.btn Home
                        li
                            if page == "Images"
                                a(href="/admin/images").nav-link.px-2.text-white.btn Images
                            else
                                a(href="/admin/images").nav-link.px-2.text-black.btn Images
                        li
                            if page == "Scripts"
                                a(href="/admin/scripts").nav-link.px-2.text-white.btn Scripts
                            else
                                a(href="/admin/scripts").nav-link.px-2.text-black.btn Scripts
                        li
                            if page == "Users"
                                a(href="/admin/users").nav-link.px-2.text-white.btn Users
                            else
                                a(href="/admin/users").nav-link.px-2.text-black.btn Users
                        li
                            if page == "Logs"
                                a(href="/admin/logs").nav-link.px-2.text-white.btn Logs
                            else
                                a(href="/admin/logs").nav-link.px-2.text-black.btn Logs
                        li
                                a(href="/").nav-link.px-2.text-black.btn Main Site
                    div.text-end
                        div.dropdown
                            button(type="button" data-bs-toggle="dropdown" aria-expanded="false").btn.btn-dark.dropdown-toggle#profile
                                    img(width=32,height=32 aria-label="profile" src=minioPublic + "/user/" + userIDToken + ".png").bg-light.img-thumbnail
                                    span.visually-hidden Toggle Profile Dropdown
                            ul(aria-labelledby="profile").dropdown-menu
                                li
                                    a(href="/admin/users/user/" + usernameToken).dropdown-item Profile
                                li
                                    button(onclick="logout()").dropdown-item Logout
        div.container-lg
            +content
            footer.pt-4.my-md-5.pt-md-5.border-top 
                div.row
                    div.col-12.col-md
                        img(src="/img/crane-bl.svg" alt="crater" width="80" height="64").mb-2
                        small.d-block.mb-3.text-muted crater.sh 2023

script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4", crossorigin="anonymous")
script(src="/script/template.js")
