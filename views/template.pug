doctype html
html(lang="en")
    head 
        title crater - #{page}
        meta(charset="utf-8")
        link(rel="icon" href="/img/favicon.svg")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css")
    body
        header.p-3.bg-dark.text-white 
            div.container
                div.d-flex.flex-wrap.align-items-center.justify-content-center.justify-content.lg-start
                    a(href='/').d-flex.align-items-center.mb-2.mb-lg-0.text-white.text-decoration-none
                        h1.h2.text-warning.font-monospace.mt-3 crater.sh
                        img(width=30,height=48 aria-label="crater.sh" src="/img/crane-yl.svg").bi.me-2
                    ul.nav.col-12.col-lg-auto.me-lg-auto.mb-2.justify-content-center.mb-md-0
                        li
                            if page == "Home"
                                a(href="/").nav-link.px-2.text-secondary.btn Home
                            else
                                a(href="/").nav-link.px-2.text-white.btn Home
                        li 
                            if page == "Features"
                                a(href="/features").nav-link.px-2.text-secondary.btn Features
                            else
                                a(href="/features").nav-link.px-2.text-white.btn Features
                        li 
                            if page == "Images"
                                a(href="/images").nav-link.px-2.text-secondary.btn Images
                            else
                                a(href="/images").nav-link.px-2.text-white.btn Images
                        li 
                            if page == "Scripts"
                                a(href="/scripts").nav-link.px-2.text-secondary.btn Scripts
                            else
                                a(href="/scripts").nav-link.px-2.text-white.btn Scripts
                        li 
                            if page == "About"
                                a(href="/about").nav-link.px-2.text-secondary.btn About
                            else
                                a(href="/about").nav-link.px-2.text-white.btn About

                    form(role="search").col-12.col-lg-auto.mb-3.mb-lg-0.me-lg-3
                        input(type="search", placeholder="Search...", aria-label="Search").form-control.form-control-dark.text-white.bg-dark
                    div.text-end
                        if (userIDToken)
                                div.dropdown
                                    button(type="button" data-bs-toggle="dropdown" aria-expanded="false").btn.btn-warning.dropdown-toggle#profile
                                            img(width=32,height=32 aria-label="profile" src="http://" + minioPublic + "/user/" + userIDToken + ".png").bg-light.img-thumbnail
                                            span.visually-hidden Toggle Profile Dropdown
                                    ul(aria-labelledby="profile").dropdown-menu
                                        li
                                            a(href="/account/").dropdown-item Profile
                                        li
                                            button(onclick="logout()").dropdown-item Logout
                        else
                            a(href="/sign/in").btn.btn-outline-light.me-2 Sign in
                            a(href="/sign/up").btn.btn-warning Sign up
        div.container-lg
            +content
            footer.pt-4.my-md-5.pt-md-5.border-top 
                div.row
                    div.col-12.col-md
                        img(src="/img/crane-bl.svg" alt="crater" width="80" height="64").mb-2
                        small.d-block.mb-3.text-muted crater.sh 2022
                    div.col-6.col-md
                        h5 Features
                        ul.list-unstyled.text-small
                            li.mb-1
                                a(href="/features/glance").link-secondary.text-decoration-none Code at a glance
                            li.mb-1
                                a(href="/features/submissions").link-secondary.text-decoration-none User submitted markup 
                    div.col-6.col-md
                        h5 Resources
                        ul.list-unstyled.text-small
                            li.mb-1
                                a(href="https://www.docker.com/" target="_blank").link-secondary.text-decoration-none Docker
                            li.mb-1
                                a(href="https://hub.docker.com/" target="_blank").link-secondary.text-decoration-none Docker Hub
                    div.col-6.col-md
                        h5 About
                        ul.list-unstyled.text-small
                            li.mb-1
                                a(href="/about/team").link-secondary.text-decoration-none Dev Team
                            li.mb-1
                                a(href="https://github.com/jamcdon/crater/issues" target="_blank").link-secondary.text-decoration-none Bug Reports
script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4", crossorigin="anonymous")
script(src="/script/template.js")
